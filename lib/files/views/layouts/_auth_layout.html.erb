<div class="bg-white">
  <header class="absolute inset-x-0 top-0 z-50">
    <div class="mx-auto max-w-7xl">
      <div class="px-6 pt-6 lg:max-w-2xl lg:pl-8 lg:pr-0">
        <nav class="flex items-center justify-between lg:justify-start" aria-label="Global">
          <a href="#" class="-m-1.5 p-1.5">
            <%= image_tag 'player.png', class: 'h-12 w-auto' %>
          </a>
          <div class="lg:ml-12 lg:flex lg:gap-x-14">
            <% if current_page?(new_user_registration_path) %>
              <%= link_to 'Zaloguj się', new_user_session_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
            <% else %>
              <%= link_to 'Załóż konto', new_user_registration_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
            <% end %>
          </div>
        </nav>
      </div>
    </div>
  </header>

  <div class="relative">
    <div class="mx-auto max-w-7xl w-full">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white lg:block" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
          <polygon points="0,0 90,0 50,100 0,100"/>
        </svg>

        <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
              <%= content_for(:title) || 'Data to enrich your online business' %>
            </h1>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              <%= content_for(:subtitle) || 'Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure
              qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua.'
              %>
            </p>
            <div class="mt-10 flex flex-col items-start">
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= content_for(:form) || 'Form' %>
            </div>
            <div class="mt-10 flex items-center gap-x-6">
              <a href="#" class="btn btn-outline btn-primary">
                Dowiedz się więcej o nas
              </a>
              <a href="#" class="btn btn-ghost">
                Kontakt
                <span aria-hidden="true">→</span></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <%= image_tag 'football_school.jpeg', class: "aspect-[3/2] object-cover lg:aspect-auto lg:h-full lg:w-full" %>
    </div>
  </div>
</div>
